@using MonaWebApp.Models.EntityFramework

@model List<Blog>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog</h2>
<a class="btn btn-primary ml-50 mb-15" href="/Admin/CreateBlog">Create new</a>


<a class="btn btn-outline-danger ml-50 mb-15 float-right" href="/Admin/Index">Back to Admin Index</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date</th>
            <th>Author</th>
            <th>Quote</th>
            <th>Quote Author</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Photo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.BlogId</td>
                <td>@blog.BlogName</td>
                <td>@blog.BlogRegisterDate</td>
                <td>@blog.BlogAuthor</td>
                <td>@blog.BlogQuote</td>
                <td>@blog.BlogQuoteAuthor</td>
                <td>@blog.BlogCategory</td>
                <td>@blog.BlogTags</td>
                <td>@blog.BlogPhoto</td>
                <td><a class="btn btn-success" href="/Admin/Update/@blog.BlogId">Update</a></td>
                <td><a class="btn btn-danger" href="/Admin/Delete/@blog.BlogId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
